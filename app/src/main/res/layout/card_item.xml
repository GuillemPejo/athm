<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="20dp"
        android:elevation="10dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/ombra"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#F1F1F1" />

            <TextView
                android:id="@+id/titol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Titol d'actuació"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/adreça"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titol"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:text="Adreça"
                android:textColor="@color/textos_sec" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/ombra"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                app:srcCompat="@mipmap/ic_ramon" />

            <TextView
                android:id="@+id/responsable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="Ramon" />

            <TextView
                android:id="@+id/referencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ombra"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_grey"
                android:elevation="2dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="REF2020"
                android:textSize="12dp" />

        </RelativeLayout>



        <FrameLayout
            android:id="@+id/barra"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#8BC34A" />
    </androidx.cardview.widget.CardView>

</LinearLayout>